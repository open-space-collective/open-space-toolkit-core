# Apache License 2.0

[bdist_wheel]
python-tag=py${EXTENSION}
bdist-dir=./dist${EXTENSION}

[metadata]
name = open-space-toolkit-core
version = ${PROJECT_VERSION_STRING}
author = Open Space Collective
author_email = contact@open-space-collective.org
description = Fundamental types, containers and utilities.
keywords = open-space-collective, open-space-toolkit core
license = Apache License 2.0
classifiers =
    Development Status :: 3 - Alpha
    Programming Language :: Python :: 3
    License :: OSI Approved :: Apache Software License
    Operating System :: POSIX :: Linux

[options]
zip_safe = True
include_package_data = True
python_requires = ==${PYTHON_VERSION}
install_requires = file: requirements.txt

[options.package_data]
ostk.core=libopen-space-toolkit-core.so.0, ${LIBRARY_TARGET}.*${EXTENSION}*.so